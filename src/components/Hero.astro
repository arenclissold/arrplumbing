---
import Icon from './Icon'
const phoneNumber = '0448 222 500'
---

<section
  class="flex h-screen flex-col items-center justify-center bg-cover bg-fixed bg-center bg-no-repeat"
  style="background-image: linear-gradient(rgba(30, 64, 175, 0.8), rgba(30, 64, 175, 0.8)), url(/images/hero.jpg);"
>
  <div class="flex h-1/2 items-end">
    <h2
      class="px-4 text-center text-4xl font-bold text-white sm:text-6xl md:px-6 lg:px-12"
    >
      Latrobe Valley's trusted local plumber
    </h2>
  </div>
  <div class="grid h-1/2 grid-cols-2 items-center gap-2 sm:gap-4">
    <a
      class="rounded-3xl bg-pink-600 py-2 px-2 sm:px-4 text-lg font-semibold text-white transition-all duration-200 hover:bg-pink-500 sm:text-xl whitespace-nowrap"
      href="#form">REQUEST A QUOTE</a
    >

    <a
      href={`tel:${phoneNumber}`}
      class="flex w-fit items-center rounded-3xl bg-pink-600 py-2 px-4 text-lg font-semibold text-white transition-all duration-200 hover:bg-pink-500 sm:text-xl whitespace-nowrap"
    >
      <Icon icon="phone" className="inline-block scale-150 mr-2" />
      {phoneNumber}
    </a>
  </div>
</section>
