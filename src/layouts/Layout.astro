---
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth bg-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="keywords"
      content="Morwell, Traralgon, plumber, gas plumber, gas, leak, Churchill, Latrobe valley"
    />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />

    <!-- Primary Meta Tags -->
    <title>AAR Plumbing</title>
    <meta name="title" content="AAR Plumbing" />
    <meta
      name="description"
      content="Local Plumber Rhett serving Morwell and the surrounding area, with over 30 years of experience in the industry, with top-quality service."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://aarplumbing.com.au/" />
    <meta property="og:title" content="AAR Plumbing" />
    <meta
      property="og:description"
      content="Local Plumber Rhett serving Morwell and the surrounding area, with over 30 years of experience in the industry, with top-quality service."
    />
    <meta
      property="og:image"
      content="https://aarplumbing.com.au/images/meta-image.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://aarplumbing.com.au/" />
    <meta property="twitter:title" content="AAR Plumbing" />
    <meta
      property="twitter:description"
      content="Local Plumber Rhett serving Morwell and the surrounding area, with over 30 years of experience in the industry, with top-quality service."
    />
    <meta
      property="twitter:image"
      content="https://aarplumbing.com.au/images/meta-image.jpg"
    />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
